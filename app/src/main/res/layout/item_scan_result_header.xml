<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:layout_marginTop="20dp"
        android:id="@+id/frame_empty_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_empty_scan"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/linear_scan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_scan_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:textColor="#ffffff"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/scanned_satatus_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="45dp" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_scan_result_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_scanned_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:background="@color/C_10000000"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:gravity="center"
        android:paddingLeft="94dp"
        android:paddingTop="8dp"
        android:paddingRight="94dp"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>