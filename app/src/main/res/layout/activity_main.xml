<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_support_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_bacground_gradient_color">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_scan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/white"
                    android:textSize="36sp" />

                <LinearLayout
                    android:id="@+id/linear_last_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="49dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_last_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/str_last_scan"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_not_scanned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="136.5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/logo" />


                <ToggleButton
                    android:id="@+id/toggle_scan_mode"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/crypto_on"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/white"
                    android:textOff="crypto"
                    android:textOn="all" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="33dp">


                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/spin_kit"
                                    style="@style/SpinKitView.Large.MultiplePulseRing"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    app:SpinKit_Color="@color/white" />


                                <android.support.v7.widget.AppCompatImageButton
                                    android:id="@+id/btn_crypto_scan"
                                    android:layout_width="124dp"
                                    android:layout_height="124dp"
                                    android:layout_gravity="center" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_scan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/notosans_cjkkr_bold"
                                    android:gravity="center"
                                    android:text="@string/str_scan"
                                    android:textColor="@color/C_189EFF"
                                    android:textSize="20sp" />


                            </FrameLayout>

                        </FrameLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_current_scan_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/notosans_cjkkr_regular"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <FrameLayout
                        android:id="@+id/frame_more"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_gravity="right">

                        <ImageButton
                            android:id="@+id/img_btn_more"
                            android:layout_width="8dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:background="@drawable/more"
                            android:clickable="false" />


                    </FrameLayout>

                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:id="@+id/linear_validated_crypto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C_202324"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="11dp"
                    android:text="@string/str_validated_crypto_apps"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="14.1dp"
                    android:layout_height="14.1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="19.9dp"
                    android:background="@drawable/arrow_right" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/linear_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="70dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/support" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="44dp"
                        android:fontFamily="@font/notosans_cjkkr_regular"
                        android:gravity="center"
                        android:text="@string/str_support"
                        android:textColor="@color/C_666666" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="115dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/C_EEEEEE" />

                <LinearLayout
                    android:id="@+id/linear_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="70dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/about" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="44dp"
                        android:fontFamily="@font/notosans_cjkkr_regular"
                        android:gravity="center"
                        android:text="@string/str_about"
                        android:textColor="@color/C_666666" />


                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="115dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/C_EEEEEE" />

                <LinearLayout
                    android:id="@+id/linear_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="70dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/settings" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="44dp"
                        android:fontFamily="@font/notosans_cjkkr_regular"
                        android:gravity="center"
                        android:text="@string/str_settings"
                        android:textColor="@color/C_666666" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</LinearLayout>
