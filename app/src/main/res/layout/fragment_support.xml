<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_support_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bacground_gradient_color">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="136.5dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_last_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="33dp">


                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/btn_scan"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:background="@drawable/scan_round_background" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:text="SCAN"
                    android:textColor="@color/C_189EFF"
                    android:textSize="28sp" />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"


        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/notosans_cjkkr_regular"
            android:text="Scan your device for hidden threats"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <FrameLayout
            android:id="@+id/frame_more"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="8dp"
                android:layout_height="32dp"
                android:background="@drawable/more" />


        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear_validated_crypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/C_202324"
            android:orientation="horizontal">


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="11dp"
                android:layout_weight="1"
                android:text="@string/str_validated_crypto_apps"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="14.1dp"
                android:layout_height="14.1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="19.9dp"
                android:background="@drawable/arrow_right" />


        </LinearLayout>

    </LinearLayout>


</FrameLayout>